<!-- Displays a single users information.  Username links to recipes -->
<p>
  Name: <%= link_to "#{user.fname} #{user.lname}", user %>
</p>
<p>
  Email: <%= user.email %>
</p>
<p>
  Username: <%= user.username %>
</p>
<p>
  <% if admin  && !user.admin? %>
    <%= link_to "Delete #{user.username}", user, method: :delete,
        data: { confirm: "Are you sure" } %>
  <% end %>
</p>