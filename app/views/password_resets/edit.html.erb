<% provide(:title, @page_title) %>
<!-- Form allows user to reset password -->
<h1>Reset password</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <!-- Requests a new password from user -->
    <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
      <%= render 'shared/errors', object: f.object  %>
      
      <!-- Adds email to page form hash -->
      <%= hidden_field_tag :email, @user.email %>
      
      <!-- Adds password to page hash -->
      <p>
        <%= f.password_field :password, placeholder: :password, 
              class: 'form-control' %>
      </p>
      <!-- Adds password confirm to pahe hash -->
      <p>
        <%= f.password_field :password_confirmation, placeholder: "Confirmation",
              class: 'form-control' %>
      </p>
      
      <!-- Updates user password digest -->
      <p><%= f.submit "Update password", class: "btn btn-primary" %></p>
    <% end %>
  </div>
</div>