<!-- If user not logged in show signup/login buttons -->
<% unless session[:user_id] %>

  <!-- Remove signup button from signup page -->
  <% if !(params[:controller] == 'users') %>
    <p>
      <%= link_to "Sign Up?", new_user_path, :class => "myButton" %>
    </p>
  <% end %>
  
  <!-- Remove login button from login page -->
  <% if !(params[:controller] == 'sessions') %>
    <p>
      <%= link_to "Log In", login_path, :class => "myButton" %>
    </p>
  <% end %>

<!-- Show user links (after login) -->
<%else%>
  <%= link_to "Home", :home, :class => "myButton nav", :method => :get %>
  <%= link_to "Profile", :profile, :class => "myButton nav", :method => :get %>
  <%= link_to "Settings", :setting, :class => "myButton nav", :method => :get %>
  <%= link_to "Logout", :logout, :class => "myButton nav", :method => :get %>
<%end%>