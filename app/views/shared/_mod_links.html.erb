<!-- Adds edit link if object is owned by current user -->
<%= link_to 'edit', 
    edit_polymorphic_path(object) if current_user?(object.user) %>
    
<!-- Adds delete link if object is owned by current user or admin user -->
<% if admin || current_user?(object.user) %>            
  <%= link_to 'delete', object, method: :delete, 
                        data: { confirm: "Are you sure?"} %>
<% end %>